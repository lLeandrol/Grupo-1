<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarketAplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/coffee</item>
        <item name="colorOnPrimary">@color/skin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skin</item>
        <item name="colorSecondaryVariant">@color/skin2</item>
        <item name="colorOnSecondary">@color/skin3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MarketAplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MarketAplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MarketAplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>